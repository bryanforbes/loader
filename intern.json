{
	"extends": "./node_modules/@dojo/scripts/intern/base.json",
	"capabilities+": {
		"name": "@dojo/loader"
	},

	"browser": {
		"loader": {
			"script": "dojo2",
			"options": {
				"packages": [
					{ "name": "src", "location": "dist/testing/src" },
					{ "name": "tests", "location": "dist/testing/tests" },
					{ "name": "@dojo", "location": "node_modules/@dojo" },
					{ "name": "sinon", "location": "node_modules/sinon/pkg", "main": "sinon" }
				]
			}
		}
	},

	"node": {
		"suites": [
			"./dist/testing/tests/unit/all-node.js"
		]
	},

	"coverage": [
		"./dist/testing/src/**/*.js"
	]
}
